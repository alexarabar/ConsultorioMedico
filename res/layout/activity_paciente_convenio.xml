<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_paciente_convenio"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
tools:context="br.com.alexandrebarboza.consultoriomedico.PacienteConvenioActivity"
android:weightSum="1"
android:gravity="center_horizontal"
android:background="@color/light_green">

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/list_paciente_convenios" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/light_green"
    android:weightSum="4">

    <Button
        android:text="Pronto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paciente_convenio_ok"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bt_default_black"
        android:layout_weight="1" />

    <Button
        android:text="Inserir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paciente_convenio_add"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bt_default_black"
        android:layout_weight="1" />

    <Button
        android:text="Excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paciente_convenio_del"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bt_default_black"
        android:layout_weight="1" />

    <Button
        android:text="Sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paciente_convenio_cancel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bt_default_black"
        android:layout_weight="1" />

</LinearLayout>

</LinearLayout>
